<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mmc.reviewer.mapper.ReviewerTaskMapper">

   <insert id="insert">
       insert into reviewer_task (reviewer_id,report_task_id,status,create_time)
       values(#{reviewerId},#{reportTaskId},#{status},#{createTime})
   </insert>


    <update id="update">
        update reviewer_task set status =#{status} where reviewer_id=#{reviewerId} and report_task_id=#{reportTaskId}
    </update>
</mapper>